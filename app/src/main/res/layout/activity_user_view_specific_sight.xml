<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sightseeing.UserViewSpecificSight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/custom_button_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivsightImage"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_alignParentTop="true"
                android:contentDescription="image"
                android:scaleType="centerCrop" />
            <TextView

                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/tvsightTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivsightImage"
                android:paddingHorizontal="15dp"
                android:paddingTop="15dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                tools:text="sight Title" />

            <TextView
                android:textStyle="italic"
                android:textSize="17dp"
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvsightTitle"
                android:padding="15dp"
                android:textColor="@color/black"
                tools:text="$25" />

            <TextView
                android:textStyle="italic"
                android:textSize="17dp"
                android:id="@+id/tvSuitedFor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvsightTitle"
                android:layout_alignParentEnd="true"
                android:padding="15dp"
                android:textColor="@color/black"
                tools:text="Beginner" />

            <TextView
                android:id="@+id/tvsightDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvPrice"
                android:paddingHorizontal="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:text="Description" />



        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvsightDescription"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btncancelsight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_background"
                android:text="Cancel"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnpaymentsight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_background"
                android:text="Make Payment"
                android:textAllCaps="false" />

        </LinearLayout>

    </LinearLayout>



</ScrollView>