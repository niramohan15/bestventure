<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    tools:context=".sightseeing.AdminViewSightDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivsightImage"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentTop="true"
            android:contentDescription="image"
            android:scaleType="centerCrop" />

        <TextView

            android:id="@+id/tvsightTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivsightImage"
            android:paddingHorizontal="15dp"
            android:paddingTop="15dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:text="sight Title" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvsightTitle"
            android:padding="15dp"
            android:textColor="@color/black"
            tools:text="$25" />

        <TextView
            android:id="@+id/tvSuitedFor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvsightTitle"
            android:layout_alignParentEnd="true"
            android:padding="15dp"
            android:textColor="@color/black"
            tools:text="Beginner" />

        <TextView
            android:id="@+id/tvsightDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPrice"
            android:paddingHorizontal="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="Description" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvsightDescription"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEditsight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_background"
                android:text="Edit sight"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnDeletesight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_background"
                android:text="Delete sight"
                android:textAllCaps="false" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>